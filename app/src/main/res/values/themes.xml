<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme that references our Material 3 theme -->
    <style name="Theme.AuraFrameFX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/light_tertiary</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/light_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/light_error</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorErrorContainer">@color/light_error_container</item>
        <item name="colorOnErrorContainer">@color/light_on_error_container</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Surface colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/light_outline</item>
        <item name="colorOutlineVariant">@color/light_outline_variant</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
        
        <!-- Hologram colors -->
        <item name="hologramPrimary">@color/hologram_primary</item>
        <item name="hologramSecondary">@color/hologram_secondary</item>
        <item name="hologramAccent">@color/hologram_accent</item>
        <item name="hologramGlowStart">@color/hologram_glow_start</item>
        <item name="hologramGlowEnd">@color/hologram_glow_end</item>
        <item name="hologramScanLine">@color/hologram_scan_line</item>
        <item name="hologramNoise">@color/hologram_noise</item>
        <item name="hologramGrid">@color/hologram_grid</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.AuraFrameFX.Button</item>
        <item name="materialCardViewStyle">@style/Widget.AuraFrameFX.CardView</item>
        <item name="alertDialogTheme">@style/Theme.AuraFrameFX.Dialog</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AuraFrameFX.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AuraFrameFX.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AuraFrameFX.LargeComponent</item>
        
        <!-- Material 3 specific -->
        <item name="elevationSmall">4dp</item>
        <item name="elevationMedium">8dp</item>
        <item name="elevationLarge">16dp</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.AuraFrameFX.CardView" parent="@style/Widget.Material3.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/light_surface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/light_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.AuraFrameFX.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_primary</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    
    <!-- Dialog style -->
    <style name="Theme.AuraFrameFX.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowBackground">@color/light_surface</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
    </style>
    
    <!-- Theme overlay for action bar -->
    <style name="ThemeOverlay.AuraFrameFX.ActionBar" parent="">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>
