<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Material 3 -->
    <style name="Theme.AuraFrameFX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Surface colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
        <item name="android:textColorSecondary">@color/light_on_surface_variant</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.AuraFrameFX.Button</item>
        <item name="materialCardViewStyle">@style/Widget.AuraFrameFX.CardView</item>
        <item name="alertDialogTheme">@style/Theme.AuraFrameFX.Dialog</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AuraFrameFX.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AuraFrameFX.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AuraFrameFX.LargeComponent</item>
    </style>

    <!-- Button style -->
    <style name="Widget.AuraFrameFX.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_primary</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- CardView style -->
    <style name="Widget.AuraFrameFX.CardView" parent="Widget.Material3.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/light_surface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/light_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Dialog style -->
    <style name="Theme.AuraFrameFX.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowBackground">@color/light_surface</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="android:textColorPrimary">@color/light_on_surface</item>
    </style>
    
    <!-- Shape appearances -->
    <style name="ShapeAppearance.AuraFrameFX.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.AuraFrameFX.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.AuraFrameFX.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent.NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
